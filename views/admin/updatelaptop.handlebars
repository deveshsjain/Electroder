<form method="POST" action="/admin/updatedlaptop">
  <input type="hidden" name="prodid" value="{{prod._id}}">
  <ol>
    <li>ID: {{prod._id}}</li>
    <ul>
      <li>Name: <input type="text" id="name" name="name" value="{{prod.prod_name}}" required autofocus> </li>
      <li>Brand: <input type="text" id="brand" name="brand" value="{{prod.prod_brand}}" required></li>
      <li>Price: <input type="text" min="0" id="price" name="price" value="{{prod.prod_price}}" required></li>
      <li>Screen Size: <input type="text" id="size" name="ss" value="{{prod.prod_screensize}}" required></li>
      <li>RAM: <input type="text" id="ram" name="ram" value="{{prod.prod_ram}}"
          required></li>
      <li>Processor:<input type="text" id="processor" name="processor" value="{{prod.prod_processor}}" required></li>
      <li>HDD: <input type="text" min="1" id="hdd" name="hdd" value="{{prod.prod_hard_disk_size}}"
          required></li>
      <li>Rating: <input type="text" min="1" max="5" id="rating" name="rating" placeholder="rating out of 5" value="{{prod.prod_rating}}"
          required></li>
          {{!-- const val = {{prod.sold}}; --}}
      <li>Sold: <input type="text" name="sold" value="{{prod.sold}}"></li>
    </ul>
    <button type="submit">Update</button>
    {{!-- <button type="submit" onclick="window.location.href = '/admin/updatedlaptop/{{this._id}}'"> Update</button>
    --}}
  </ol>
</form>